<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dia_LenearLayout"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_gravity="center"
    android:background="@drawable/red_panel"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="10dp"
        android:text="Level Cleared"
        android:textSize="40dp" />

    <!--<TextView-->
    <!--android:id="@+id/txtLevelBestPoint"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_gravity="center"-->
    <!--android:textSize="35dp"-->
    <!--android:text="best" />-->

    <TextView
        android:id="@+id/txtLevelPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff0"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="Point"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/txtLevelScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="15dp"
        android:textColor="#fff"
        android:text="Score"
        android:textSize="35dp" />

    <ImageView
        android:id="@+id/imgFacebook"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="15dp"
        android:background="@drawable/facebook" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgLevelMenu"
            android:layout_width="0dp"
            android:layout_marginLeft="35dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/menu_btn" />

        <ImageView
            android:id="@+id/btnLevelReload"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/reload_btn" />

        <ImageView
            android:id="@+id/imgLevelForward"
            android:layout_marginRight="35dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/forward_btn_red" />

    </LinearLayout>


</LinearLayout>